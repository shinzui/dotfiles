[user]
  name =  <%= print("Your Git Global Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Git Global Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
  amend = commit --amend -C HEAD
  st = status -sb
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log --stat --ignore-space-at-eol --abbrev-commit --relative-date --format=medium
  ls-ignored = ls-files --exclude-standard --ignored --others
  who = shortlog -s --
  review= log -p --max-count=1
[color]
  sh = auto
  status = auto
  branch = auto
  diff = auto
  ui = auto
[merge]
  summary = true
  tool = threesome
[mergetool "threesome"]
  cmd = "mvim -f $BASE $LOCAL $REMOTE $MERGED -c 'ThreesomeInit'"
  trustExitCode = true
[diff "exif"]
  textconv = exiftool
[core]
  editor = vim 
  excludesfile = <%= ENV['HOME'] %>/.gitignore
[apply]
  whitespace = nowarn
[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
[push]
  default = tracking
[rerere]
	enabled = 1
[help]
	browser = gitscm
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[browser "gitscm"]
	cmd = /bin/sh -c 'open http://git-scm.com/docs/$(basename $1 .html)' --
