#Aliases#
alias _='sudo'
alias df='df -h'
alias g='grep -i'
alias h='history|g'
alias rm='rm -i'
alias rmf='rm -f'
alias cp='cp -r'
alias mv='mv -i'
alias md='mkdir -p'
alias ls='ls -hBG'
alias l.='ls -d .*'
alias top='htop'
alias ..='cd ..;'
alias ...='cd ..;cd ..;'
alias psgrep='ps aux|grep'
alias k9='kill -9'
alias fn='find . -name'

alias fcache='dscacheutil -flushcache'

alias tmux='TERM=xterm-256color tmux'

#ruby
alias gi='gem install'
alias gic='gi --no-rdoc --no-ri'

#bundler
alias b='bundle'
alias bi='b install'
alias bu='b update'
alias be='b exec'
alias bl='b list'

#zeus
alias zr='zeus rake'

#OSX
alias finder='open -a Finder'
alias ql='qlmanage -p'

#Util
alias json_curl='curl -H "Accept: application/json" -i -X GET'
